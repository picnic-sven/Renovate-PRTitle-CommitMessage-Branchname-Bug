{
    "$schema": "https://json.schemastore.org/renovate",
    "additionalBranchPrefix": "{{{{raw}}}}{{parentDir}}-{{{{/raw}}}}",
    "commitMessagePrefix": "TicketID {{{{raw}}}}{{parentDir}}{{{{/raw}}}}:",
    "enabledManagers": ["pipenv"],
    "packageRules": [
      {
        "groupName": "{{{{raw}}}}{{parentDir}}{{{{/raw}}}}",
        "matchPackagePatterns": [".*"]
      }
    ],
    "prHeader": "Type: opt\nTicket: TicketID",
    "rangeStrategy": "bump",
    "includePaths": [
      "{{project_template}}/Pipfile",
      "project_template/Pipfile"
    ]
  }